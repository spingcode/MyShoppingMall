<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
		PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
		"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<!--<properties resource="src/main/resources/mybatis-generator.properties" />-->

	<!-- 请更改mysql驱动包路径-->
	<classPathEntry location="E:\repository\mysql\mysql-connector-java\5.1.38/mysql-connector-java-5.1.38.jar"/>

	<!--是否生成注释-->
	<context id="SalesAdminTables" targetRuntime="MyBatis3">
		<plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

		<commentGenerator>
			<property name="suppressAllComments" value="true" />
			<property name="suppressDate" value="true" />
		</commentGenerator>

		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
						connectionURL="jdbc:mysql://localhost:3306/shoppingmall?zeroDateTimeBehavior=convertToNull"
						userId="root"
						password="root">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false"/>
		</javaTypeResolver>

		<javaModelGenerator targetPackage="kaola.com.seller.entity"
							targetProject="src/main/java">
			<property name="enableSubPackages" value="true"/>
			<property name="trimStrings" value="true"/>
		</javaModelGenerator>

		<sqlMapGenerator targetPackage="kaola.com.seller.mapper"
						 targetProject="src/main/java">
			<property name="enableSubPackages" value="true"/>
		</sqlMapGenerator>

		<javaClientGenerator type="XMLMAPPER" targetPackage="kaola.com.seller.mapper"
							 targetProject="src/main/java">
			<property name="enableSubPackages" value="true"/>
		</javaClientGenerator>


		<!-- 	<table tableName="t_userfield" domainObjectName="Userfield" enableCountByExample="false"
                   enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false"
                   selectByExampleQueryId="false">
                <property name="useActualColumnNames" value="false"/>
            </table> -->

		<table tableName="seller" domainObjectName="Seller" enableCountByExample="false"
			   enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false"
			   selectByExampleQueryId="false">
			<property name="useActualColumnNames" value="false"/>
		</table>

	</context>
</generatorConfiguration>